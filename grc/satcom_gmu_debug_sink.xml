<?xml version="1.0"?>
<block>
  <name>debug_sink</name>
  <key>satcom_gmu_debug_sink</key>
  <category>[satcom_gmu]</category>
  <import>import satcom_gmu</import>
  <import>import numpy as np</import>
  <make>satcom_gmu.debug_sink($vec_len,$vec_type.size)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
  <name>Vector Length</name>
  <key>vec_len</key>
  <type>int</type>
  </param>



  <param>
    <name>Vector Type</name>
    <key>vec_type</key>
		<type>enum</type>
    <!-- <value>byte</value> -->
		<option>
			<name>Complex</name>
			<key>complex</key>
      <opt>size:np.complex64</opt>
		</option>
		<option>
			<name>Float</name>
			<key>float</key>
      <opt>size:np.float</opt>
		</option>
		<option>
			<name>Integer</name>
			<key>int</key>
      <opt>size:np.int32</opt>
		</option>
	<option>
			<name>Byte</name>
			<key>byte</key>
      <opt>size:np.uint8</opt>
		</option>
 
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>$vec_type<!-- e.g. int, float, complex, byte, short, xxx_vector, ...--></type>
    <vlen>$vec_len</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
</block>
